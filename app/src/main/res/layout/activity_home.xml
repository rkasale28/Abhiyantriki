            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="About KJSCE" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
